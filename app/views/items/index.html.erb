<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">
    <h1 class="font-semibold">All Todos</h1>

    <sl-input placeholder="What needs to be done?" minlength="2" maxlength="128" required
     data-controller="items" data-reflex="slChange->ItemsReflex#create" data-reflex-permanent>
    </sl-input>

    <% @items.each do |item| %>
      <sl-card class="mt-small w-full relative <%= "shadow-lg" if item.incomplete? %> <%= "opacity-50" if item.completed? %>">
        <sl-tooltip content="Toggle Completed">
          <sl-switch <%= "checked" if item.completed? %>
            data-controller="items" data-reflex="click->ItemsReflex#toggle" data-id="<%= item.id %>">
            <span class="<%= "line-through" if item.completed? %>">
              <%= item.title %>
            </span>
          </sl-switch>
        </sl-tooltip>
        <sl-tooltip content="Delete">
          <sl-icon-button name="trash" class="absolute top-0 right-0"
            data-controller="items" data-reflex="click->ItemsReflex#destroy" data-id="<%= item.id %>">
          </sl-icon-button>
        </sl-tooltip>
      </sl-card>
    <% end %>

    <section class="mt-medium pt-x-small" data-reflex-permanent>
      <small class="block font-light opacity-75">We had a lot of fun building this demo with <a href="https://docs.stimulusreflex.com">StimulusReflex</a>.</small>
      <iframe class="block mt-small" src="https://ghbtns.com/github-btn.html?user=hopsoft&repo=stimulus_reflex_todomvc&type=star&count=true" frameborder="0" scrolling="0" style="height:20px;"></iframe>
      <iframe class="block mt-xx-small" src="https://ghbtns.com/github-btn.html?user=hopsoft&repo=stimulus_reflex_todomvc&type=fork&count=true" frameborder="0" scrolling="0" style="height:20px;"></iframe>
      <iframe class="block mt-xx-small" src="https://ghbtns.com/github-btn.html?user=hopsoft&type=follow&count=true" frameborder="0" scrolling="0" style="height:20px;"></iframe>
    </section>

  </div>
  <div class="col-xs-3"></div>
</div>
